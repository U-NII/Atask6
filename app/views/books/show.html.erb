 <p id="notice">
  <%= notice %>
 </p>
 <div class="container px-5 px-sm-0">
  <div class="row">
   <div class="col-md-3">
    <%= render 'books/info', user: @user,book: @book_new %>
   </div>
   <div class="col-md-8 offset-md-1">
    <h3>Book detail</h3>
    <table class="table">
     <tbody>
      <tr>
       <td>
        <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg",size: "40x40"  %><br>
        <%= link_to @user.name,user_path(@user) %>
       </td>
       <td><%= link_to @book.title, book_path(@book) %></td>
       <td><%= @book.body %></td>
       <td><a herf="current_user"></a></td>
       <td><img class="profile_image"></td>
       <% if @user.id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-sm btn-success edit_book_30520" %></td>
        <td><%= link_to "Destroy", book_path(@book), class:"btn btn-sm btn-danger destroy_book_30520",method: :delete, data: { confirm: 'Are you sureï¼Ÿ' } %></td>
       <% end %>
       <td id="favorites_buttons_<%= @book.id %>">
        <%= render partial: 'favorites/favorite', locals: { book: @book} %>
       </td>
      </tr>
     </tbody>
    </table>
    <div class="comments_area" >
     <%= render partial: 'book_comments/index', locals: { comments: @comments } %>
    </div>
    <div>
     <%= render partial: 'book_comments/form', locals: { book: @book, book_comment: @book_comment } %>
    </div>
   </div>
  </div>
 </div>
 <%= render 'books/footer', user: @user,book: @book %>